<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroud"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_skip_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:text="@string/skip_ad"
        android:textSize="20sp"
        android:textColor="@color/my_common_white"
        android:background="@drawable/selector_skip_ad"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="广告位置火热招租"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></TextView>

</RelativeLayout>