<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <RelativeLayout
        android:id="@+id/rl_all_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:background="@color/my_black_alpha_30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_mannag_skin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/skin_edit_normal"
                    android:layout_marginRight="20dp"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_bckg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="皮肤"
                    android:gravity="center_horizontal"
                    android:textColor="@color/my_common_white"
                    android:textSize="22dp"/>

            </RelativeLayout>
        </RelativeLayout>


        <GridView
            android:id="@+id/grid_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_title"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="14dp"
            android:listSelector="@color/my_transparent"
            android:numColumns="3"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            />

    </RelativeLayout>
</LinearLayout>