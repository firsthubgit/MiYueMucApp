<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="2dp"
        >
        <ImageView
            android:id="@+id/iv_list_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/btn_arrow_down"/>
        <TextView
            android:id="@+id/tv_music_order"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_orange"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/text_size_16"/>
        <LinearLayout
            android:id="@+id/ll_local_music_list"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/iv_list_icon"
            android:layout_toRightOf="@+id/tv_music_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_music_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_18"
                style="@style/TextColorWhite"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="哈哈"/>
            <TextView
                android:id="@+id/tv_music_singer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                style="@style/TextColorWhite60"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="我是"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_alignParentBottom="true"
        style="@style/DivideLine"
        android:layout_height="1.0px"
        />

</LinearLayout>