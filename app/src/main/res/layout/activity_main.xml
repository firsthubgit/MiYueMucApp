<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:openDrawer="start">
    <!-- android:fitsSystemWindows="true"让测滑view在导航栏之上-->

    <include
        layout="@layout/activity_main_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    </include>


    <fragment
        android:id="@+id/frag_menu"
        android:name="com.miyue.ui.fragment.menu.MenuFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/sliding_menu"
        android:tag="sliding_menu"
        />


</android.support.v4.widget.DrawerLayout>
